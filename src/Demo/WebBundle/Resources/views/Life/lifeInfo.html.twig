{% extends "DemoWebBundle::default_layout.html.twig" %}

{% block pageTitle %}{{ lifeInfo.getLifeTitle }}{% endblock %}
{% block pageDescription %}{{ lifeInfo.getLifeTitle }}{% endblock %}

{% block LC_stylesheets %}
    <link rel="stylesheet" href="http://storage.lattecake.com/static/css/font-awesome.min.css"/>
{% endblock %}

{% block content %}
    <main class="" id="content">
        <div class="container">

            <!-- Page Heading/Breadcrumbs -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">{{ lifeInfo.getLifeTitle }}
                        <small>作者: <a href="{{ userInfo.getUserUrl }}" target="_blank">{{ userInfo.getUserNiceName }}</a>
                        </small>
                    </h1>
                    <ol class="breadcrumb">
                        <li><a href="{{ url('main_index') }}">首页</a></li>
                        <li><a href="{{ url('main_life', {'page': page}) }}">慢生活</a></li>
                        <li class="active">文章内容</li>
                    </ol>
                </div>
            </div>
            <!-- /.row -->

            <!-- Content Row -->
            <div class="row">

                <!-- Blog Post Content Column -->
                <div class="col-lg-9">

                    <!-- Blog Post -->

                    <hr>

                    <!-- Date/Time -->
                    <p><i class="fa fa-clock-o"></i>{{ lifeInfo.getLifeTime|date('M  d, Y  H:i A') }}</p>

                    <hr>

                    <!-- Preview Image -->
                    <div style="overflow-y: hidden; height: 300px; text-align: center; margin:0 auto;">
                        <img class="img-responsive" src="{{ lifeInfo.getLifeImage }}" style="display: table-cell; vertical-align:middle; margin:0 auto;">
                    </div>


                    <!-- Post Content -->
                    <div class="bs-callout bs-callout-info LifeContent">
                    {% autoescape false %}
                        {{ lifeInfo.getLifeContent }}
                    {% endautoescape %}
                    </div>
                    {% if lifeInfo.getLifeSource %}
                        来自: <a href="{{ lifeInfo.getLifeSource }}" target="_blank">{{ lifeInfo.getLifeSource }}</a>
                    {% endif %}
