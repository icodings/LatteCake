{% extends "DemoWebBundle::default_layout.html.twig" %}

{% block pageTitle %}-{{ lifeInfo.getLifeTitle }}{% endblock %}
{% block pageDescription %}{{ lifeInfo.getLifeTitle }}{% endblock %}

{% block LC_stylesheets %}
    <script src="http://storage.lattecake.com/static/css/font-awesome.min.css"></script>
{% endblock %}

{% block content %}
    <main class="" id="content">
        <div class="container">

            <!-- Page Heading/Breadcrumbs -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">{{ lifeInfo.getLifeTitle }}
                        <small>作者: <a href="{{ userInfo.getUserUrl }}" target="_blank">{{ userInfo.getUserNiceName }}</a>
                        </small>
                    </h1>
                    <ol class="breadcrumb">
                        <li><a href="{{ url('main_index') }}">首页</a></li>
                        <li><a href="{{ url('main_life', {'page': page}) }}">慢生活</a></li>
                        <li class="active">文章内容</li>
                    </ol>
                </div>
            </div>
            <!-- /.row -->

            <!-- Content Row -->
            <div class="row">

                <!-- Blog Post Content Column -->
                <div class="col-lg-9">

                    <!-- Blog Post -->

                    <hr>

                    <!-- Date/Time -->
                    <p><i class="fa fa-clock-o"></i>{{ lifeInfo.getLifeTime|date('M  d, Y  H:i A') }}</p>

                    <hr>

                    <!-- Preview Image -->
                    <div style="overflow-y: hidden; height: 300px; text-align: center; margin:0 auto;">
                        <img class="img-responsive" src="{{ lifeInfo.getLifeImage }}" style="display: table-cell; vertical-align:middle; margin:0 auto;">
                    </div>

                    <hr>

                    <!-- Post Content -->
                    <div class="bs-callout bs-callout-info">
                    {{ lifeInfo.getLifeContent }}
                    </div>
                    <hr>

                    <!-- Blog Comments -->

                    <!-- Comments Form -->
                    <!-- 多说评论框 start -->
                    <div class="ds-thread" data-thread-key="life_{{ lifeInfo.getId }}" data-title="{{ lifeInfo.getLifeTitle }}" data-url="{{ url('life_lifeInfo', {'id': lifeInfo.getId}) }}"></div>
                    <!-- 多说评论框 end -->
                    <!-- 多说公共JS代码 start (一个网页只需插入一次) -->
                    <script type="text/javascript">
                        var duoshuoQuery = {short_name:"lattecake"};
                        (function() {
                            var ds = document.createElement('script');
                            ds.type = 'text/javascript';ds.async = true;
                            ds.src = (document.location.protocol == 'https:' ? 'https:' : 'http:') + '//static.duoshuo.com/embed.js';
                            ds.charset = 'UTF-8';
                            (document.getElementsByTagName('head')[0]
                                    || document.getElementsByTagName('body')[0]).appendChild(ds);
                        })();
                    </script>
                    <!-- 多说公共JS代码 end -->

                </div>

                <!-- Blog Sidebar Widgets Column -->
                <div class="col-md-3">

                    <!-- Blog Search Well -->
                    <div class="well">
                        <h4>搜索</h4>
                        <div class="input-group">
                            <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
                        </span>
                        </div>
                        <!-- /.input-group -->
                    </div>

                    <!-- Blog Categories Well -->
                    <div class="well">
                        <h4>栏目最新</h4>
                        <div class="row">
